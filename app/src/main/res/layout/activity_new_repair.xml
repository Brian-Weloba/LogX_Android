<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/devices_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeDevicesActivity">


    <RelativeLayout
        android:id="@+id/headerNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/headerNewRepair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="New Repair"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/backText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"
            android:text="Back"
            android:textColor="@color/primary_blue"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/headerNew"
        android:layout_alignParentBottom="true"
        android:fillViewport="true">

        <RelativeLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/titleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/search_bg"
                android:hint="Title"
                android:inputType="textPersonName"
                android:padding="15dp"
                android:paddingStart="20dp"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/repairmanText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleText"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/search_bg"
                android:hint="Repairman Name"
                android:inputType="textPersonName"
                android:padding="15dp"
                android:paddingStart="20dp"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/clientDeviceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/repairmanText"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/search_bg"
                android:hint="Device Name"
                android:inputType="textPersonName"
                android:padding="15dp"
                android:paddingStart="20dp"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/clientDeviceUID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/clientDeviceName"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/search_bg"
                android:hint="Sevice Serial"
                android:inputType="textPersonName"
                android:padding="15dp"
                android:paddingStart="20dp"
                android:textSize="16sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/fixedParts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/clientDeviceUID"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/search_bg"
                android:hint="Fixed Parts"
                android:padding="15dp"
                android:paddingStart="20dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLength="2000"
                android:maxLines="4"
                android:lines="4"
                android:gravity="start"/>

            <EditText
                android:id="@+id/replacedParts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fixedParts"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/search_bg"
                android:hint="Replaced Parts"
                android:padding="15dp"
                android:paddingStart="20dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLength="2000"
                android:maxLines="4"
                android:lines="4"
                android:gravity="start"/>

            <EditText
                android:id="@+id/Price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/replacedParts"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/search_bg"
                android:hint="Search"
                android:inputType="textPersonName"
                android:padding="15dp"
                android:paddingStart="20dp"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dueDateText"
                android:layout_below="@id/Price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"
                android:text="Due Date"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                />

            <DatePicker
                android:id="@+id/dueDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dueDateText"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="30dp" />

            <Button
                android:id="@+id/addNewbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dueDate"
                android:layout_marginStart="30dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/button_bg"
                android:text="Record" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>